<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.UpdateUserProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="24dp"
            android:src="@drawable/ic_baseline_menu_24"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/updateProfilePicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="100dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/teal_200" />

            <ImageView
                android:layout_margin="14dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_photo_camera_24"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/pageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_profile_photo"
            android:layout_margin="24dp"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/updateProfilePicture"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/updateUsernamefieldLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/update_username"
            android:layout_marginTop="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginLeft="36dp"
            app:layout_constraintTop_toBottomOf="@+id/pageLabel">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/updateUsernamefield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/updateEmailfieldLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/update_email_address"
            android:layout_marginTop="18dp"
            android:layout_marginRight="36dp"
            android:layout_marginLeft="36dp"
            app:layout_constraintTop_toBottomOf="@+id/updateUsernamefieldLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/updateEmailfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/updatePasswordfieldLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/update_password"
            android:layout_marginTop="18dp"
            android:layout_marginRight="36dp"
            android:layout_marginLeft="36dp"
            app:layout_constraintTop_toBottomOf="@+id/updateEmailfieldLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/updatePasswordfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/updateCityfieldLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/update_city"
            android:layout_marginTop="18dp"
            android:layout_marginRight="36dp"
            android:layout_marginLeft="36dp"
            app:layout_constraintTop_toBottomOf="@+id/updatePasswordfieldLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/updateCityfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/updateStatefieldLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/update_state"
            android:layout_marginTop="18dp"
            android:layout_marginRight="36dp"
            android:layout_marginLeft="36dp"
            app:layout_constraintTop_toBottomOf="@+id/updateCityfieldLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/updateStatefield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/updateBirthdayfieldLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/update_birthday"
            android:layout_marginTop="18dp"
            android:layout_marginRight="36dp"
            android:layout_marginLeft="36dp"
            app:layout_constraintTop_toBottomOf="@+id/updateStatefieldLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/updateBirthdayfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/updateAboutmeFieldlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/update_about_me_section"
            android:layout_marginTop="18dp"
            android:layout_marginRight="36dp"
            android:layout_marginLeft="36dp"
            app:layout_constraintTop_toBottomOf="@+id/updateBirthdayfieldLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/updateAboutmeField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:maxLines="18"
                android:lines="18"
                android:textAlignment="viewStart"
                android:inputType="textMultiLine"
                android:scrollHorizontally="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:id="@+id/updateSportsselection"
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginRight="36dp"
            android:layout_marginLeft="36dp"
            app:layout_constraintTop_toBottomOf="@+id/updateAboutmeFieldlayout">

            <AutoCompleteTextView
                android:id="@+id/updateSportsautocomplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:text="@string/update_sport_selection"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:id="@+id/updateSportsSelectionTwo"
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginRight="36dp"
            android:layout_marginLeft="36dp"
            app:layout_constraintTop_toBottomOf="@+id/updateSportsselection">

            <AutoCompleteTextView
                android:id="@+id/updateSportsautocompleteSecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:text="@string/update_secondary_sport_selection"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:id="@+id/updateTitleselection"
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginRight="36dp"
            android:layout_marginLeft="36dp"
            app:layout_constraintTop_toBottomOf="@id/updateSportsSelectionTwo">

            <AutoCompleteTextView
                android:id="@+id/updateTitleautocomplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:text="@string/update_title"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:id="@+id/updateTitleselectionTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginRight="36dp"
            android:layout_marginLeft="36dp"
            app:layout_constraintTop_toBottomOf="@id/updateTitleselection">

            <AutoCompleteTextView
                android:id="@+id/updateTitleautocompleteSecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:text="@string/update_secondary_title"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/updateProfilebutton"
            android:padding="16dp"
            android:layout_marginTop="36dp"
            android:textSize="16dp"
            android:text="@string/update_profile_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dark_grey_bubble"
            app:layout_constraintTop_toBottomOf="@id/updateTitleselectionTwo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/updateProfilebutton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>