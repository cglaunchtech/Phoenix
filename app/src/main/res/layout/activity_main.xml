<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.MainActivity">

    <Button
        android:id="@+id/btn_test_news_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test News Preview"
        app:layout_constraintBottom_toTopOf="@+id/btn_test_recycler_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_test_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Recycler View"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_test_news_preview" />
</androidx.constraintlayout.widget.ConstraintLayout>