<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item
                android:top="5dp"
                android:left="5dp">
                <shape>
                    <corners android:radius="32dp" />
                    <solid android:color="@color/shadow" />
                </shape>
            </item>
            <item
                android:right="2dp"
                android:top="5dp"
                android:bottom="2dp"
                android:left="2dp">
                <shape>
                    <gradient
                        android:angle="50"
                        android:startColor="@color/grey"
                        android:centerColor="@color/dark_grey"
                        android:endColor="@color/grey"
                        />
                    <corners
                        android:radius="32dp"
                        />

                </shape>
            </item>
        </layer-list>
    </item>

</selector>