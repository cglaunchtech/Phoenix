<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.sportssocial">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SportsSocial"
        tools:targetApi="31">
        <activity
            android:name=".ui.view.camera.VideoCapture"
            android:exported="true" />
        <activity
            android:name=".ui.view.camera.PhotoCollectionCapture"
            android:exported="true" />
        <activity
            android:name=".ui.view.camera.ProfilePhotoCapture"
            android:exported="true" />
        <activity
            android:name=".ui.view.NewsArticleWebView"
            android:exported="true" />
        <activity
            android:name=".ui.view.RecyclerView"
            android:exported="false" />
        <activity
            android:name=".ui.view.ArticlePreview"
            android:exported="true" />
        <activity
            android:name=".ui.view.UpdateProfile"
            android:exported="true" />
        <activity
            android:name=".ui.view.ProfilePicScroll"
            android:exported="false" />

        <activity
            android:name=".ui.view.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".ui.view.SignUp"
            android:exported="true" />
        <activity
            android:name=".ui.view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:authorities="com.example.sportssocial.fileprovider"
            android:name="androidx.core.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data android:name="android.support.FILE_PROVIDER_PATHS" android:resource="@xml/file_paths"/>
        </provider>


        <meta-data
            android:name="keyValue"
            android:value="${KEY}" />
    </application>

</manifest>